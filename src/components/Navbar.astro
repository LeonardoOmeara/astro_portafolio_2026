---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

// Detectamos el idioma actual desde la URL
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<nav class="fixed top-0 left-0 w-full z-50 border-b border-white/5 bg-[#050505]/60 backdrop-blur-xl">
  <div class="max-w-5xl mx-auto px-6 h-16 flex items-center justify-between">
    
    <a href={`/${lang}/`} class="text-white font-bold tracking-tighter text-xl hover:opacity-70 transition-opacity">
      LEONARDO<span class="text-blue-500">.dev</span>
    </a>
    
    <div class="flex gap-8 items-center">
      <div class="hidden md:flex gap-6">
        <a href={`/${lang}/#proyectos`} class="text-sm font-medium text-neutral-400 hover:text-white transition-colors">
          {t('nav.projects')}
        </a>
      </div>
      
      <a 
        href={lang === 'es' ? '/en/' : '/es/'} 
        class="text-[10px] font-mono font-bold tracking-widest text-blue-400 border border-blue-400/30 px-2 py-1 rounded hover:bg-blue-400 hover:text-black transition-all"
      >
        {lang === 'es' ? 'SWITCH TO ENGLISH' : 'CAMBIAR A ESPAÃ‘OL'}
      </a>
    </div>

  </div>
</nav>