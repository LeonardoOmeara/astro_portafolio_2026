---
interface Props {
  date: string;
  title: string;
  company: string;
  description: string;
  stack: string[];
}

const { date, title, company, description, stack } = Astro.props;
---

<div class="relative pl-8 border-l border-white/10 pb-12 last:pb-0">
  <div class="absolute w-3 h-3 bg-blue-500 rounded-full -left-[6.5px] top-1.5 shadow-[0_0_15px_rgba(59,130,246,0.6)]"></div>
  
  <span class="text-xs font-mono text-neutral-500 uppercase tracking-widest">{date}</span>
  
  <div class="mt-2">
    <h3 class="text-xl font-bold text-white leading-none">{title}</h3>
    <p class="text-blue-400 font-medium text-sm mt-1">{company}</p>
  </div>

  <p class="text-neutral-400 mt-4 text-sm leading-relaxed max-w-2xl">
    {description}
  </p>

  <div class="flex flex-wrap gap-2 mt-4">
    {stack.map(item => (
      <span class="text-[10px] font-mono text-neutral-500 border border-white/5 px-2 py-0.5 rounded">
        {item}
      </span>
    ))}
  </div>
</div>