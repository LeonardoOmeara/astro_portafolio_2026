---
import type { ImageMetadata } from 'astro'; // Importante el 'type' y que venga de 'astro'
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  tags: string[];
  image: ImageMetadata;
  link?: string;
}

const { title, description, tags, image, link } = Astro.props;
---

<div class="group relative grid grid-cols-1 md:grid-cols-12 gap-8 py-12 border-b border-white/5 last:border-none transition-all">
  
  <div class="md:col-span-5 overflow-hidden rounded-xl bg-neutral-900 border border-white/10 group-hover:border-blue-500/30 transition-colors h-64 md:h-80"> 
    <Image 
      src={image} 
      alt={title} 
      class="w-full h-full object-cover object-top opacity-80 group-hover:opacity-100 group-hover:scale-105 transition-all duration-500"
    />
    </div>

  <div class="md:col-span-7 flex flex-col justify-center space-y-4">
    <div class="flex gap-2">
      {tags.map(tag => (
        <span class="text-[10px] font-mono uppercase tracking-widest text-blue-400 bg-blue-400/10 px-2 py-0.5 rounded">
          {tag}
        </span>
      ))}
    </div>
    
    <h3 class="text-2xl font-bold text-white group-hover:text-blue-400 transition-colors">
      {title}
    </h3>
    
    <p class="text-neutral-400 leading-relaxed text-sm md:text-base">
      {description}
    </p>

    {link && (
      <a href={link} class="text-white text-sm font-semibold inline-flex items-center gap-2 hover:underline">
        Ver detalles del proyecto 
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14 text-white"/><path d="m12 5 7 7-7 7"/></svg>
      </a>
    )}
  </div>
</div>